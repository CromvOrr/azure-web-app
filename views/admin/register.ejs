<section id="login" class="login">
  <div class="login-content">
    <h2>Register</h2>
    <div>
      <form action="/register" method="POST">
        <input type="text" name="username" placeholder="Username" required />
        <input
          type="password"
          name="password"
          placeholder="Password"
          required
        />
        <div class="submit-div">
          <button
            class="submit-button"
            type="submit"
            onclick="location.href='/login'"
          >
            Submit
          </button>
        </div>
      </form>
    </div>

    <div id="register">
      <a>Already have an account?&nbsp;&nbsp;<span onclick="location.href='/login'">Log In</span></a>
    </div>
  </div>
</section>
