<section id="more" class="more">
  <div class="more-content">
    <div class="button">
      <a href="#"
        ><span class="material-symbols-outlined"
          >keyboard_double_arrow_up</span
        ></a
      >
    </div>

    <h2 id="search-look">Search</h2>

    <div class="search-bar">
      <span id="search-icon" class="material-symbols-outlined"> search </span>
      <input
        type="text"
        id="search-input"
        placeholder="Enter Title or Platform"
      />
    </div>

    <div class="game-header">
      <li>
        <a>
          <p id="header-title">Title</p>
          <p>Platform</p>
          <p>Purchase Date</p>
        </a>
      </li>
      <div class="horizontal-bar"></div>
    </div>

    <% function formatDate(date) { 
      const d = new Date(date); 
      const day = String(d.getDate()).padStart(2, "0"); 
      const month = String(d.getMonth() + 1).padStart(2, "0"); 
      const year = d.getFullYear(); 
      return `${day}.${month}.${year}`; 
    } %>

    <div class="game-container">
      <ul class="game-ul" id="game-list">
        <% games.forEach(game => { %>
        <li id="game-<%= game.id %>">
          <a>
            <h3><%= game.title %></h3>
            <p><%= game.platform %></p>
            <p><%= formatDate(game.date_acquired) %></p>
          </a>
        </li>
        <% }) %>
      </ul>
    </div>
  </div>
</section>
